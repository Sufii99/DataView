<div style="max-width: 520px; margin: 24px auto; background: #fff; border-radius: 20px; box-shadow: 0 4px 24px #0001; font-family: 'Inter', Arial, sans-serif; padding: 32px 36px;">
  <h1 style="font-size: 2rem; font-weight: 700; color: #4338ca; margin-bottom: 18px;">Nuevo mensaje de contacto</h1>

  <div style="margin-bottom: 20px; font-size: 1rem;">
    <p style="margin: 0 0 8px 0;">
      <span style="display: inline-block; min-width: 96px; color: #666; font-weight: 600;">Nombre:</span>
      <span style="color: #222;"><%= @first_name %> <%= @last_name.presence || "<span style='color:#bbb'>(sin apellido)</span>".html_safe %></span>
    </p>
    <p style="margin: 0 0 8px 0;">
      <span style="display: inline-block; min-width: 96px; color: #666; font-weight: 600;">Email:</span>
      <span style="color: #222;"><%= @user_email %></span>
    </p>
    <p style="margin: 0 0 8px 0;">
      <span style="display: inline-block; min-width: 96px; color: #666; font-weight: 600;">Tel√©fono:</span>
      <span style="color: #222;">
        <%= @phone.present? ? @phone : "<span style='color:#bbb'>(no indicado)</span>".html_safe %>
      </span>
    </p>
  </div>

  <div style="margin-top: 18px;">
    <p style="margin: 0 0 6px 0; color: #4338ca; font-weight: 700;">Mensaje:</p>
    <div style="background: #f1f5f9; border-radius: 12px; padding: 16px 18px; color: #374151; font-size: 1rem;">
      <%= @message %>
    </div>
  </div>
</div>
