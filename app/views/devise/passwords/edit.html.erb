<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 pt-30">
  
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold tracking-tight text-gray-900">
      Cambiar contraseña
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="space-y-6">
        <div>
          <%= f.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-900" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">(mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %>
          <div class="mt-2">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-sm font-medium text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.submit "Actualizar contraseña", 
              class: "flex w-full justify-center rounded-xl bg-indigo-600 px-6 py-2 text-base font-semibold text-white shadow-md hover:bg-indigo-500 transition focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
