<% content_for :title, "DataView | Cambiar contraseña" %>

<div class="flex min-h-screen flex-col justify-center items-center px-6 py-12 pt-30">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg border border-gray-200 p-8">
    <h2 class="text-center text-2xl font-bold tracking-tight text-gray-900">
      Cambiar contraseña
    </h2>

    <div class="mt-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-6">
          <div>
            <%= f.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-900" %>
            <% if @minimum_password_length %>
              <em class="text-sm text-gray-500">(mínimo <%= @minimum_password_length %> caracteres)</em>
            <% end %>
            <div class="mt-2">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= f.submit "Actualizar contraseña",
              class: "flex w-full justify-center rounded-xl bg-indigo-600 px-6 py-2 text-base font-semibold text-white shadow-md hover:bg-indigo-500 transition focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-8 text-center text-sm text-gray-500 space-y-2">
        <p>
          ¿Ya tienes cuenta?
          <%= link_to "Inicia sesión", new_user_session_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
        </p>
        <p>
          ¿No tienes cuenta?
          <%= link_to "Regístrate", new_user_registration_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
        </p>
        <p>
          ¿No recibiste las instrucciones de confirmación?
          <%= link_to "Reenviar confirmación", new_user_confirmation_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    </div>
  </div>
</div>
