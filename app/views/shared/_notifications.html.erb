<div class="fixed top-[100px] left-2 z-[1000] max-w-[90%] space-y-2 p-4">
  <% flash.each do |key, message| %>
    <% css_class, icon_color = case key.to_s
      when "success"
        ["bg-green-100 dark:bg-green-900 border-green-500 dark:border-green-700 text-green-900 dark:text-green-100", "text-green-600"]
      when "notice"
        ["bg-blue-100 dark:bg-blue-900 border-blue-500 dark:border-blue-700 text-blue-900 dark:text-blue-100", "text-blue-600"]
      when "alert", "error"
        ["bg-red-100 dark:bg-red-900 border-red-500 dark:border-red-700 text-red-900 dark:text-red-100", "text-red-600"]
      else
        ["bg-yellow-100 dark:bg-yellow-900 border-yellow-500 dark:border-yellow-700 text-yellow-900 dark:text-yellow-100", "text-yellow-600"]
    end %>

    <div
      role="alert"
      class="<%= css_class %> border-l-4 p-2 rounded-lg flex items-center transition duration-300 ease-in-out hover:scale-105 hover:brightness-105 transform shadow-lg"
    >
      <svg
        stroke="currentColor"
        viewBox="0 0 24 24"
        fill="none"
        class="h-5 w-5 flex-shrink-0 mr-2 <%= icon_color %>"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M13 16h-1v-4h1m0-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          stroke-width="2"
          stroke-linejoin="round"
          stroke-linecap="round"
        ></path>
      </svg>

      <p class="text-xs font-semibold flex-1"><%= message %></p>

      <button
        onclick="this.parentElement.remove()"
        class="ml-2 p-1 rounded hover:bg-black/10 transition"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  <% end %>
</div>
<script>
  document.addEventListener("turbo:load", () => {
    document.querySelectorAll("[role='alert']").forEach(el => {
      setTimeout(() => el.remove(), 5000); // desaparece a los 5s
    });
  });
</script>
