<header id="navbar" class="fixed inset-x-0 top-0 z-50 bg-transparent transition-all duration-500 ease-in-out">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8 font-sans" aria-label="Global">
    
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">DataView</span>
        <img class="h-10 w-auto" src="<%= asset_path('icono.png') %>" alt="Logo DataView">
      </a>
    </div>
      
    <div class="flex lg:hidden">
      <button id = "open-menu" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
      
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "Inicio", root_path, class: "nvar text-sm font-semibold text-gray-900" %>
      <%= link_to "Guía", guide_path, class: "nvar text-sm font-semibold text-gray-900" %>
      <%= link_to "Panel", dashboard_path, class: "nvar text-sm font-semibold text-gray-900" %>

      <% if current_user&.admin? %>
        <%= link_to "Administración", admin_panel_path, class: "nvar text-sm font-semibold text-gray-900" %>
      <% end %>

      <div class="relative flex items-center">
        <button type="button" class="flex items-center gap-x-1 text-sm font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200" aria-expanded="false">
          Ayuda
          <svg class="h-4 w-4 mt-[1px] transition-transform duration-300 ease-in-out group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.584l3.71-4.353a.75.75 0 111.14.976l-4.25 5a.75.75 0 01-1.14 0l-4.25-5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
      
        <div class="absolute top-full -left-8 z-10 mt-3 w-screen max-w-md overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5 transition ease-in-out duration-200 opacity-0 translate-y-1 invisible">
          <div class="p-4">
            
            <a href="/faq" class="group relative flex w-full items-center gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-gray-50 cursor-pointer">
              <div class="flex size-11 flex-none items-center justify-center rounded-lg bg-gray-50 group-hover:bg-white">
                <svg class="size-6 text-gray-600 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M12 14a4 4 0 1 0-4-4m4 4v2m0-14a10 10 0 1 0 0 20 10 10 0 0 0 0-20Z" />
                </svg>
              </div>
              <div class="flex-auto font-semibold text-gray-900 text-left">
                FAQ
              </div>
            </a>

            <a href="<%= contact_path %>" class="group relative flex w-full items-center gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-gray-50 cursor-pointer">
              <div class="flex size-11 flex-none items-center justify-center rounded-lg bg-gray-50 group-hover:bg-white">
                <svg class="size-6 text-gray-600 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25H4.5A2.25 2.25 0 0 1 2.25 17.25V6.75m19.5 0a2.25 2.25 0 0 0-2.25-2.25H4.5A2.25 2.25 0 0 0 2.25 6.75m19.5 0L12 13.5 2.25 6.75" />
                </svg>
              </div>
              <div class="flex-auto font-semibold text-gray-900 text-left">
                Contacto
              </div>
            </a>

            </div>
          </div>
        </div>

      </div>

      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <% if user_signed_in? %>
          <div class="relative group">
            <button type="button" class="flex items-center gap-x-2 text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">
              <span><%= current_user.first_name %></span>
              <%= image_tag current_user.avatar.attached? ? current_user.avatar : 'default_avatar.svg', class: "h-8 w-8 rounded-full" %>
              <svg class="h-5 w-5 transition-transform duration-300 ease-in-out transform group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.584l3.71-4.353a.75.75 0 111.14.976l-4.25 5a.75.75 0 01-1.14 0l-4.25-5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
              </svg>
            </button>

            <div class="absolute top-full right-0 z-10 mt-3 w-64 overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5 opacity-0 translate-y-1 invisible group-hover:opacity-100 group-hover:translate-y-0 group-hover:visible transition-all duration-200 ease-in-out">
              <div class="p-4">

                <!-- Configurar perfil -->
                <a href="<%= edit_user_registration_path %>" class="group relative flex w-full items-center gap-x-6 rounded-lg p-4 text-sm hover:bg-gray-50 cursor-pointer">
                  <div class="flex h-11 w-11 flex-none items-center justify-center rounded-lg bg-gray-50 group-hover:bg-white">
                    <svg class="h-6 w-6 text-gray-600 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>
                  </div>
                  <div class="flex-auto font-semibold text-gray-900 text-left">
                    Configurar perfil
                  </div>
                </a>

                <!-- Cerrar sesión -->
                <%= form_with url: destroy_user_session_path, method: :delete do %>
                  <button type="submit" class="group relative flex w-full items-center gap-x-6 rounded-lg p-4 text-sm hover:bg-gray-50 cursor-pointer">
                    <div class="flex h-11 w-11 flex-none items-center justify-center rounded-lg bg-gray-50 group-hover:bg-white">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                          stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-gray-600 group-hover:text-indigo-600">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
                      </svg>
                    </div>
                    <div class="flex-auto font-semibold text-gray-900 text-left">
                      Cerrar sesión
                    </div>
                  </button>
                <% end %>

              </div>
            </div>
          </div>

        <% else %>
          <a href="<%= new_user_session_path %>" class="text-sm font-semibold text-gray-900">
            Iniciar Sesión <span aria-hidden="true">&rarr;</span>
          </a>
        <% end %>

    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">DataView</span>
          <img class="h-8 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="">
        </a>
        
        <button id="close-menu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">

            <!-- Secciones principales -->
            <%= link_to "Inicio", root_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Guía", guide_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Panel", dashboard_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>

            <% if current_user&.admin? %>
              <%= link_to "Administración", admin_panel_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
            <% end %>

            <!-- Dropdown Ayuda -->
            <div class="-mx-3">

              <button type="button" id="toggle-help" class="flex w-full items-center justify-between rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">
                Ayuda
                <svg id="toggle-help-icon" class="h-5 w-5 flex-none" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                </svg>
              </button>

              <div id="disclosure-help" class="mt-2 space-y-2 hidden">
                <%= link_to "FAQ", faq_path, class: "block rounded-lg py-2 pr-3 pl-6 text-sm font-semibold text-gray-900 hover:bg-gray-50" %>
                <%= link_to "Contacto", contact_path, class: "block rounded-lg py-2 pr-3 pl-6 text-sm font-semibold text-gray-900 hover:bg-gray-50" %>
              </div>

            </div>
          </div>

          <div class="py-6">

            <% if user_signed_in? %>

              <div class="space-y-2">
                <%= link_to "Configurar perfil", edit_user_registration_path, class: "block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
                <%= form_with url: destroy_user_session_path, method: :delete do %>
                  <button type="submit" class="w-full text-left block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">
                    Cerrar sesión
                  </button>
                <% end %>
              </div>

            <% else %>
              <%= link_to "Iniciar sesión", new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
